  "colors": {
    "background": "#F8FAFC",
    "container": "#FFFFFF",
    "border": "#E2E8F0",
    "text": {
      "primary": "#1E293B",
      "secondary": "#64748B",
      "muted": "#94A3B8"
    },
    "accent": {
      "primary": "#3B82F6",
      "success": "#22C55E",
      "warning": "#F59E0B",
      "error": "#EF4444"
    },
    "data": {
      "task-normal": "#CBD5E1",
      "task-critical": "#3B82F6",
